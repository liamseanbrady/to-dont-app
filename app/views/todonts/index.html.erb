<h4><%= current_user.username %>'s Todon'ts</h4>

<p><strong>Create a New Todon't</strong></p>
<%= form_for [current_user, @todont] do |f| %>
  <%= f.label :body %>
  <%= f.text_field :body %>
  <br/>
  <br/>
  <%= f.label :visibility %>
  <br/>
  <label>Private</label>
  <input type="radio" name="todont[visibility]" value="private" checked=<%= 'true' if @todont.visibility == 'private' %> >
  <label>Public</label>
  <input type="radio" name="todont[visibility]" value="public" checked=<%= 'true' if @todont.visibility == 'public' %> >
  <br/>
  <%= f.submit "Create Todon't" %>
<% end %>

<ul>
  <% @todonts.each do |todont| %>
    <li><%= todont.body %></li>
    <%= link_to "Show todon't", user_todont_path(current_user, todont) %>
  <% end %>
</ul>